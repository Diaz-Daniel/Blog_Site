<form class="form edit-blog-post">
  <div class="form-group">
    <input type="hidden" name="blog-id" value={{oneblog.id}} />
    <label for="blog-title">Update Post</label>
    <input
      type="text"
      class="form-control"
      name="blog-title"
      value={{oneblog.title}}
    />
  </div>
  <div class="form-group">
    <label for="blog-text">Text Body</label>
    <textarea
      class="form-control"
      name="blog-text"
      rows="3"
    >{{oneblog.body}}</textarea>
  </div>
  <button type="submit" class="btn btn-secondary">Update</button>
  <button type="button" class="btn btn-secondary" id="deleteBtn">Delete</button>
</form>
<script src="/js/edit.js"></script>